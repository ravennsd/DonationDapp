<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000000" />
    <link
      rel="shortcut icon"
      href="https://cdn0.iconfinder.com/data/icons/colorful-guache-social-media-logos-1/159/social-media_donate-1024.png"
    />
    <link
      rel="apple-touch-icon"
      sizes="76x76"
      href="https://cdn0.iconfinder.com/data/icons/colorful-guache-social-media-logos-1/159/social-media_donate-1024.png"
    />
    <!-- Font Awesome Link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
      integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
      crossorigin="anonymous"
    />
    <!-- Bootstrap 5 CSS only link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <!-- Title -->
    <title>Donation Record | DonationDapp</title>
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
      :root {
        font-size: 16px;
      }
      body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
        scroll-behavior: smooth;
      }
      body::-webkit-scrollbar,
      nav::-webkit-scrollbar {
        width: 0.25rem;
      }
      body::-webkit-scrollbar-track,
      nav::-webkit-scrollbar-track {
        background: #1e1e24;
      }
      body::-webkit-scrollbar-thumb,
      nav::-webkit-scrollbar-thumb {
        background: #6649b8;
      }
      nav {
        width: 20vw;
        float: left;
        height: 100%;
        background: #222;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        overflow-x: hidden;
      }
      .redLogo {
        color: red;
      }
      .nav-item {
        color: #818181;
        display: block;
        text-decoration: none;
      }
      .nav-item:hover,
      .active {
        color: #f1f1f1;
      }
      main {
        margin-left: 20vw;
        clear: both;
        position: relative;
      }
      .title {
        height: 20vh;
        min-height: 7rem;
      }
      footer {
        position: relative;
        margin-top: 10vh;
        padding: 3vh 0;
      }
    </style>
  </head>
  <body>
    <!-- Navbar leftSide -->
    <nav class="leftSide text-uppercase text-white fw-bold">
      <h3 class="Logo text-center fw-bold my-3">
        Donation<span class="redLogo">Dapp</span>
      </h3>
      <hr />
      <div class="navs">
        <ul class="navlist list-unstyled ms-4">
          <li>
            <a href="/home" class="nav-item p-2">
              <i class="fas fa-home me-2"></i> Home
            </a>
          </li>
          <li>
            <a href="/dashboard" class="nav-item p-2"
              ><i class="fas fa-tv me-2"></i> Dashboard</a
            >
          </li>
          <li>
            <a href="/user" class="nav-item p-2">
              <i class="fas fa-user-cog me-2"></i> User Account</a
            >
          </li>
          <li>
            <a href="/new" class="nav-item p-2">
              <i class="fas fa-user-plus me-2"></i> New Pateint</a
            >
          </li>
          <li>
            <a href="#" class="nav-item p-2 active">
              <i class="fas fa-notes-medical me-2"></i>Donation Record</a
            >
          </li>
        </ul>
      </div>
      <hr />
      <div class="lowerNav">
        <ul class="navlist list-unstyled ms-4">
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-tools me-2"></i>Settings</a
            >
          </li>
          <li>
            <a href="#" class="nav-item p-2">
              <i class="fas fa-address-card me-2"></i>Contact Us</a
            >
          </li>
        </ul>
      </div>
      <hr />
      <div class="signout">
        <ul class="navlist list-unstyled ms-4">
          <li class="">
            <a href="/signOut" class="nav-item p-2"
              ><i class="fas fa-sign-out-alt me-2"></i>Signout</a
            >
          </li>
        </ul>
      </div>
    </nav>

    <!-- Main rightside -->
    <main class="rightSide">
      <!-- Title -->
      <h1
        class="title display-2 align-middle py-3 fw-bold bg-success bg-gradient text-uppercase text-center text-white"
      >
        Donation Record
      </h1>

      <!-- Section Donation Records -->
      <section class="DonationRecords px-5 py-3">
        <h1 class="text-center text-uppercase mb-3">Current Donation Record</h1>
        <div class="row g-3 DonationRecord">
          <div class="col-md-8 position-relative">
            <label for="vname" class="me-2 fw-bold">Donor Name:</label>
            <label for="vnameFromDB"><%= dRecord.DonorName%></label>
          </div>
          <div class="col-md-4 position-relative">
            <label for="uid" class="me-2 fw-bold">Unique ID:</label>
            <label for="uidFromDB" id="uidfromDB"><%= dRecord.uid%></label>
          </div>
          <div class="col-md-4 position-relative">
            <label for="manufacturer" class="me-2 fw-bold">Hospital:</label>
            <label for="manufacturerFromDB" id="manufacturerfromDB"
              ><%= dRecord.hospital%></label
            >
          </div>
          <div class="col-md-4 position-relative">
            <label for="batch" class="me-2 fw-bold">Doctor:</label>
            <label for="batchFromDB" id="batchfromDB"
              ><%= dRecord.doc%></label
            >
          </div>
          <div class="col-md-4 position-relative">
            <label for="slno" class="me-2 fw-bold">SlNo:</label>
            <label for="slnoFromDB" id="slnofromDB"><%= dRecord.slNo%></label>
          </div>
          <div class="col-md-6 position-relative">
            <label for="hos" class="me-2 fw-bold">Hospital:</label>
            <label for="hosFromDB" id="hosfromDB"><%= dRecord.hos%></label>
          </div>
          <div class="col-md-6 position-relative">
            <label for="doc" class="me-2 fw-bold">Record Added:</label>
            <label for="docFromDB" id="mfdfromDB"><%= dRecord.doc%></label>
          </div>
        </div>
      </section>
      <hr />

      <!-- Verify Donation Details -->
      <section class="DonationVerify px-5 py-3">
        <h1 class="text-center text-uppercase mb-3">Verify Donation Details</h1>
        <div class="VerifyDonation mt-3">
          <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-notes-medical"></i> Verify Donation</label>
          <form
            action="/Donation/verify"
            method="post"
            class="row g-3 needs-validation"
            novalidate
          >
            <div class="col-md-5 position-relative">
              <div class="input-group has-validation">
                <span
                  class="input-group-text"
                  id="validationTooltipDonationVerifyPrependSearch"
                  ><i class="fas fa-id-card-alt"></i
                ></span>
                <input
                  type="number"
                  class="form-control"
                  name="uid"
                  id="validationTooltipDonationVerifySearch"
                  aria-describedby="validationTooltipDonationVerifyPrependSearch"
                  placeholder="Enter Unique ID"
                  required
                />
                <div class="invalid-tooltip">
                  Please choose a valid Unique ID.
                </div>
                <input
                  type="number"
                  class="form-control"
                  name="DonationCount"
                  id="validationTooltipDonationVerifySearch"
                  aria-describedby="validationTooltipDonationVerifyPrependSearch"
                  placeholder="Update Count"
                  required
                />
              </div>
            </div>
            <div class="col-md-1 position-relative">
              <button type="submit" class="btn btn-danger">Verify</button>
            </div>
            <small
              >*NB: Increase the value of <strong>Update Count</strong> if there
              is any data change after initial record. Default value is
              <strong>1</strong></small
            >
          </form>
        </div>
      </section>
      <hr />

      <!-- Section previous records -->
      <section class="prevVRecordsBtn px-5 py-3">
        <h3 class="text-center text-uppercase mb-3">
          Previous Donation Records
        </h3>
        <label for="UniqueIDSearch" class="fw-bold"><i class="fas fa-book-medical"></i> Check Previous Donation Details</label>
        <form
          action="/Donation/get"
          method="post"
          class="row g-3 needs-validation"
          novalidate
        >
          <div class="col-md-5 position-relative">
            <div class="input-group has-validation">
              <span
                class="input-group-text"
                id="validationTooltipUniqueIDPrependSearch"
                ><i class="fas fa-id-card-alt"></i
              ></span>
              <input
                type="number"
                class="form-control"
                name="uid"
                id="validationTooltipUniqueIDSearch"
                aria-describedby="validationTooltipUniqueIDPrependSearch"
                placeholder="Enter Unique ID"
                required
              />
              <div class="invalid-tooltip">
                Please choose a valid Unique ID.
              </div>
            </div>
          </div>
          <div class="col-md-1 position-relative">
            <button type="submit" class="btn btn-success">Search</button>
          </div>
        </form>
      </section>

      
    </main>
  </body>
  <!-- Bootstrap 5 JavaScript Bundle with Popper -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"
  ></script>
  <script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
      'use strict';

      // Fetch all the forms we want to apply custom Bootstrap validation styles to
      var forms = document.querySelectorAll('.needs-validation');

      // Loop over them and prevent submission
      Array.prototype.slice.call(forms).forEach(function (form) {
        form.addEventListener(
          'submit',
          function (event) {
            if (!form.checkValidity()) {
              event.preventDefault();
              event.stopPropagation();
            }

            form.classList.add('was-validated');
          },
          false
        );
      });
    })();
  </script>
</html>
